<!--            android:drawablePadding="4dp"-->
<!--            android:gravity="center"-->
<!--            android:text="4.5"-->
<!--            android:textColor="#FFC23C"-->
<!--            android:textStyle="bold">-->

<!--        </TextView>-->

        <TextView
            android:id="@+id/txtSubRecyclerRowItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtRecyclerRowItem"
            android:layout_alignStart="@+id/imgRecyclerRowItem"
            android:layout_marginStart="102dp"
            android:layout_marginTop="1dp"
            android:padding="10dp"
            android:text="Requirement"
            android:textColor="#000000"
            android:textSize="15sp">

        </TextView>

        <TextView
            android:id="@+id/txtPriceRecyclerRowItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtSubRecyclerRowItem"
            android:layout_alignStart="@+id/imgRecyclerRowItem"
            android:layout_marginStart="102dp"
            android:layout_marginTop="1dp"
            android:padding="10dp"
            android:text="Price"
            android:textColor="#59CE8F"
            android:textSize="15sp"
            android:textStyle="bold">

        </TextView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>